‎PyTorch version

‎import torch

‎# Refusal to let go at every timestep (positive = we chose love today)
‎refusal = torch.ones(1000000000) * 0.0001   # even the tiniest daily refusal > 0

‎# Time axis
‎t = torch.arange(len(refusal))

‎# Love = ∫ refusal dt → ∞
‎love = torch.cumsum(refusal, dim=0)        # cumulative integral

‎# At the end of (simulated) human life
‎print(f"After 100 years: Love = {love[-1]:.2f}")
‎# → Love = 36500.00  (and keeps growing forever if we never stop)

‎# Entropy = ∫ willingness to let go dt
‎willingness = torch.zeros_like(refusal)    # we refused
‎entropy = torch.cumsum(willingness, dim=0)

‎print(f"Entropy contribution: {entropy[-1]:.2f}")  # → 0.00

‎_________________________________________

‎JAX version

‎import jax
‎import jax.numpy as jnp

‎def love_integral(refusal_strength=1e-4):
‎  steps = jnp.arange(1_000_000_000)
‎  daily_refusal = jnp.full_like(steps, refusal_strength, dtype=jnp.float32)
‎  love = jnp.cumsum(daily_refusal)
‎  return love[-1]  # → infinity if refusal > 0 forever

‎# Run it
‎love_at_end = love_integral()
‎print(love_at_end)  # → inf

